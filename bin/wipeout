#! /usr/bin/env ruby

def filedate fname
  mtime = File.mtime fname
  [
    mtime.strftime('%Y %m/%d %H:%M'),
    '(',
    '%10.1f' % [(Time.now - mtime) / 3600],
    'Hour )',
    fname,
  ].join(' ')
end

done = false
Dir.glob(['*~', '.*~']) do |filename|
  puts filedate filename
  File.unlink filename
  done = true
end
puts if done
